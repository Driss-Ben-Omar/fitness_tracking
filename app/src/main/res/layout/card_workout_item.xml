<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="10dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/workoutName"
            android:text="Workout: Placeholder Name"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:layout_marginTop="25dp"
            android:layout_marginStart="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/workoutWeight"
            android:text="Weight: Placeholder Weight"
            android:textSize="16sp"
            android:layout_below="@+id/workoutName"
            android:layout_marginTop="8dp"
            android:layout_marginStart="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/workoutRepetition"
            android:text="Repetition: Placeholder Repetition"
            android:textSize="16sp"
            android:layout_below="@+id/workoutWeight"
            android:layout_marginTop="8dp"
            android:layout_marginStart="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/workoutDate"
            android:text="Date: Placeholder Date"
            android:textSize="16sp"
            android:layout_below="@+id/workoutRepetition"
            android:layout_marginTop="8dp"
            android:layout_marginStart="30dp"/>

        <ImageButton
            android:id="@+id/btnDeleteWorkout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_delete_24"
            android:backgroundTint="@color/white"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_below="@+id/workoutDate"
            android:layout_marginTop="16dp"
            android:contentDescription="Delete Workout"/>

        <ImageButton
            android:id="@+id/btnEditWorkout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_edit_24"
            android:backgroundTint="@color/white"
            android:layout_toStartOf="@id/btnDeleteWorkout"
            android:layout_centerVertical="true"
            android:layout_below="@+id/workoutDate"
            android:layout_marginTop="16dp"
            android:contentDescription="Edit Workout"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
